<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.practica.Controller.AssignServiceController">
    <children>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Назначить услугу пациенту:" GridPane.rowIndex="1"/>

            <Label text="Имя пациента:" GridPane.rowIndex="2"/>
            <TextField fx:id="patientNameField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Название услуги:" GridPane.rowIndex="3"/>
            <TextField fx:id="serviceNameField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label text="Дата оказания услуги:" GridPane.rowIndex="4"/>
            <DatePicker fx:id="serviceDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <Button text="Назначить услугу" fx:id="assignServiceButton" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        </GridPane>
    </children>
</AnchorPane>

