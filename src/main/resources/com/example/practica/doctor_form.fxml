<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.DatePicker?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.practica.Controller.DoctorFormController">
    <children>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Здравствуйте, " fx:id="welcomeLabel"/>
            <Label text="Добавить пациента:" GridPane.rowIndex="1"/>

            <Label text="Имя:" GridPane.rowIndex="2"/>
            <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Фамилия:" GridPane.rowIndex="3"/>
            <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label text="Пол:" GridPane.rowIndex="4"/>
            <TextField fx:id="genderField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <Label text="Дата рождения:" GridPane.rowIndex="5"/>
            <DatePicker fx:id="dobPicker" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

            <Label text="Адресс:" GridPane.rowIndex="6"/>
            <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

            <Label text="Номер телефона:" GridPane.rowIndex="7"/>
            <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

            <Label text="Продолжительность пребывания:" GridPane.rowIndex="8"/>
            <DatePicker fx:id="stayDurationPicker" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

            <Button text="Добавить пациента" fx:id="addPatientButton" GridPane.columnIndex="1" GridPane.rowIndex="9"/>
            <Button text="Просмотреть все услуги" fx:id="viewServicesButton" GridPane.columnIndex="1" GridPane.rowIndex="10"/>
            <Button text="Назначить услугу" fx:id="assignServiceButton" GridPane.columnIndex="1" GridPane.rowIndex="11"/>
            <Button text="Просмотреть все лекарства" fx:id="viewMedicamentsButton" GridPane.columnIndex="2" GridPane.rowIndex="10"/>
            <Button text="Выход" fx:id="logoutButton" GridPane.columnIndex="3" GridPane.rowIndex="12"/>
        </GridPane>
    </children>
</AnchorPane>

